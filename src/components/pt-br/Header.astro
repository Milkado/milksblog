---
import { SITE_TITLE } from '../../consts';
import HeaderLink from './HeaderLink.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';
const { currentLocale } = Astro;
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href={getRelativeLocaleUrl("pt-br", "/")}>Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/projects">Projetos</HeaderLink>
		</div>
		<div class="locale-links">
			<a href="/" class:list={{ active: currentLocale === 'en' }}>EN</a>
			<span aria-hidden="true">|</span>
			<a href="/pt-br/" class:list={{ active: currentLocale === 'pt-br' }}>PT-BR</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.internal-links {
		flex: 1; /* Allow it to take up available space */
		display: flex; /* Make it a flex container */
		justify-content: center; /* Center its content horizontally */
	}
	.locale-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
